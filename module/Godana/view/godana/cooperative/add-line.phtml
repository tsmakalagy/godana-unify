		minimumResultsForSearch: 10,
		ajax: {
	        url: url+"?type=zone",
	        dataType: 'json',
	        results: function (data) {
	            return {results: data};
	        }
	    }
	}).change(function(event){
		if(event.target == this){
			var zoneId = event.val;
			$(".line-select").select2({
				placeholder: "Select line",
				minimumResultsForSearch: 10,
				ajax: {
			        url: url+"?zoneId="+zoneId+"&cooperativeId="+cooperativeId,
