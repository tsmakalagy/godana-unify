<script type="text/javascript">
var loginUrl = "<?php echo $this->url('zfcuser/login', array(), array(), true); ?>";
var validateUrl = "<?=$this->url('zfcuser/input_validate', array(), array(), true); ?>";
var registerUrl = "<?=$this->url('zfcuser/register', array(), array(), true); ?>";
$(document).ready(function() {	

	$('button[type="reset"]').click(function() {
		$('label').removeClass('register-error').removeClass('register-valid');
		$('label').find('.help-block').remove();
	});
	$('input[name="email"]').validateInput({
		name: 'email',
		url: validateUrl
	});
	$('input[name="username"]').validateInput({
		name: 'username',
		url: validateUrl
	});
	$('input[name="password"]').validateInput({
		name: 'password',
		url: validateUrl
	});

	$('input[name="captcha[input]"]').validateInput({
		name: 'captcha[input]',
		url: validateUrl,
		query: '&captcha[id]='+$('input[name="captcha[id]"]').val()
	});
	
	$('input[name="password"]').change(function(e) {
		var password = $(this).val();
		$('input[name="passwordVerify"]').validateInput("destroy");
		$('input[name="passwordVerify"]').validateInput("init", {
			name: 'passwordVerify',
			query: '&password='+password,
			url: validateUrl			
		});	
		
	});
	$("form#loginForm").submit(function(e) {
		e.preventDefault();
		$.ajax({
        	type: "POST",
            url: loginUrl,
            data: $("form#loginForm").serialize(),
            dataType: "json",
			beforeSend: function() {    
    			$('.login-button').addClass('disabled');
    		},
            success: function(res) {
                if (res.success == false) {
                	$("form#loginForm .my-alert").html(res.alert);
                	$('.login-button').removeClass('disabled');                	
                } else {
                	$(location).attr('href',res.redirect);  
                }
    		}
        });
        return false;
	});

	$("form#registerForm").submit(function(e) {
		e.preventDefault();
		$.ajax({
        	type: "POST",
            url: registerUrl,
            data: $("form#registerForm").serialize(),
            dataType: "json",
			beforeSend: function() {    
    			$('.register-button').addClass('disabled');
    		},
            success: function(res) {
                if (res.success == false) {
                	$("form#registerForm .my-alert").html(res.alert);
                	$('.register-button').removeClass('disabled');                	
                } else {
                	$(location).attr('href',res.redirect);  
                }
    		}
        });
        return false;
	});
	
});
</script>